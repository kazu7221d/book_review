<h1 class="page-header">Search#search</h1>
<p>Find me in app/views/search/search.html.erb</p>

<%= form_tag('/search') do %>
<div class="input-group col-sm-6">
<%= text_field_tag :rakuten_book, "", id: "book_search", name: "keyword", placeholder: "キーワードを入力" %>
<span class="input-group-btn">
  <%= submit_tag "検索", class: "btn btn-primary" %>
</span>
</div>
<% end %>

<div class="form-group">
<ul class="pagination pagination-sm">
  <li>
    <a href="#">&laquo;</a>
  </li>
  <li class="active">
    <a href="#">1</a>
  </li>
  <li>
    <a href="#">2</a>
  </li>
  <li>
    <a href="#">3</a>
  </li>
  <li>
    <a href="#">&raquo;</a>
  </li>
</ul>
</div>
<% if @item_list %>
<% items = @item_list %>
  <% now_page = 1 %>
      件数：<%= items.count %>件<br>
      <%= form_tag('/search/detail', name:'submit_item') do %>
      <table class="table table-striped table-hover">
        <tr class="info">
          <th>イメージ</th>
          <th><%= sortable "title", "タイトル" %></th>
          <th><%= sortable "author", "著者名" %></th>
          <th><%= sortable "reviewCount", "レビュー" %></th>
          <% items.each do |item| %>
            <tr onclick="<%=  %>">
              <td><img src="<%= item['smallImageUrl'] %>"></td>
              <td><%= link_to item['title'], search_detail_path(item_id: item.id), :method => :post %></td>
              <td><%= item['author'] %></td>
              <td><%= item['reviewCount'] %></td>
            </tr>
          <% end %>
        </table>
      <% end %>
    <% end %>
    <%= link_to "戻る", mypage_path %>
